---
import "../styles/global.css";
import Footer from '@components/Footer.astro';
import Sidebar from '@components/Sidebar.astro';
import Sp from '@components/Sp.astro';
import StructuredBreadcrumbs from '@components/Breadcrumbs.astro';
import { siteUpdates } from "../data/update";
const { pageTitle, PubDate, ModDate } = Astro.props;
const isIndex = Astro.url.pathname === "/";
const isThanks = Astro.url.pathname === "/thanks/";
const isMentalHealth = Astro.url.pathname === ("/mental-health/");
const isInfoLiteracy = Astro.url.pathname === ("/info-literacy/");
const isBlog = Astro.url.pathname === ("/blog/");
const isPodcast = Astro.url.pathname === ("/podcast/");
const isUpdates = Astro.url.pathname === ("/updates/");
const isTags = Astro.url.pathname === ("/tags/");
const isUpdatesDetail = Astro.url.pathname.startsWith("/updates/");
const isTag = Astro.url.pathname.startsWith("/tags/");
const title = isIndex ? "NAOMINA121" : pageTitle + " | NAOMINA121";
const canonicalURL = new URL(Astro.url.pathname, 'https://en.naomina121.com');
const mainURL = new URL(Astro.url.pathname, 'https://naomina121.com');
const ogpImageURL = isMentalHealth ? new URL('/images/mental-health.jpg', canonicalURL) : isInfoLiteracy ? new URL('/images/information-literacy.jpg', canonicalURL) : isBlog ? new URL('/images/blog2.webp', canonicalURL) : isPodcast ? new URL('/images/podcast.jpg', canonicalURL) : isPodcast ? new URL('/images/obsiedian_onsei.jpg', canonicalURL) : new URL('/images/nao2.jpg', canonicalURL);
const description = isIndex
  ? "This site is the official site of Nao. It provides information such as blogs, profiles, and activity bases."
  : "This page is about " + pageTitle + ".";
const websiteSchema = {
  "@context": "https://schema.org/",
  "@type": "WebSite",
  "name": "naomina121",
  "url": "https://en.naomina121.com/",
  "description": description,
};

const baseUrl = Astro.site?.toString().replace(/\/$/, "") ?? "";

const infoSchema = {
  "@context": "https://schema.org/",
  "@type": "WebPage",
  "name": "Update Information List",
  "description": "This is a list of update history, new articles, and announcements related to the operation of this site.",
  "url": `${baseUrl}/updates`,
  "inLanguage": "en",
  "mainEntity": {
    "@type": "ItemList",
    "itemListOrder": "https://schema.org/ItemListOrderDescending/",
    "numberOfItems": siteUpdates.length,
    "itemListElement": siteUpdates.map((u, i) => ({
      "@type": "ListItem",
      "position": i + 1,
      "item": {
        "@type": "CreativeWork",
        "name": u.title,
        "description": u.content,
        "datePublished": `${u.date}T00:00:00+09:00`,
        "dateModified": u.updatedAt ? `${u.updatedAt}T00:00:00+09:00` : `${u.date}T00:00:00+09:00`, // 更新日があれば優先
        "url": `${baseUrl}/updates/${u.slug}/`,
        "image": `${baseUrl}/images/nao2.jpg`, // サムネがない場合のフォールバック
        "author": {
          "@type": "Person",
          "name": "Nao",
          "url": "https://naomina121.com/profile/about/"
        }
      }
    }))
  }
};

const pageSchema = isUpdates || !isUpdatesDetail ? infoSchema : {
    "@context": "https://schema.org/",
    "@type": "WebPage",
    "name": pageTitle,
    "description": "This page is about " + pageTitle + ".",
    "url": canonicalURL.toString(),
    "inLanguage": "en",
    "isPartOf": {
      "@type": "WebSite",
      "name": "naomina121",
      "url": "https://en.naomina121.com/"
    },
    ...(PubDate && { "datePublished": PubDate }),
    ...(ModDate && { "dateModified": ModDate }),
  };

const { update } = Astro.props;
const articleSchema = !isUpdates && isUpdatesDetail && {
  "@context": "https://schema.org/",
  "@type": "BlogPosting", // 更新の個別ページの汎用性はBlogPosting
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": `${baseUrl}/updates/${update.slug}/`
  },
  "headline": update.title,
  "description": update.content,
  "image": {
    "@type": "ImageObject",
    "url": `${baseUrl}/images/nao2.jpg/`,
    "width": 1200,
    "height": 630
  },
  "datePublished": `${update.date}T00:00:00+09:00`,
  "dateModified": update.updatedAt ? `${update.updatedAt}T00:00:00+09:00` : `${update.date}T00:00:00+09:00`,
  "inLanguage": "ja",
  "author": {
    "@type": "Person",
    "name": "Nao",
    "url": "https://naomina121.com/profile/about/"
  },
  "publisher": {
    "@type": "Organization",
    "name": "naomina121",
    "logo": {
      "@type": "ImageObject",
      "url": `${baseUrl}/images/naomina.jpg`,
      "width": 600,
      "height": 60
    }
  }
};

const breadcrumbItems = isIndex
  ? [{ name: 'Home', item: Astro.site.origin + '/' }]
  : isUpdates
  ? [
      { name: 'Home', item: Astro.site.origin + '/' },
      { name: 'Updates', item: Astro.site.origin + '/updates/' },
  ]
  : isUpdatesDetail
  ? [
      { name: 'Home', item: Astro.site.origin + '/' },
      { name: 'Updates', item: Astro.site.origin + '/updates/' },
      { name: pageTitle, item: canonicalURL.toString() }
    ]
:isTags?[
      { name: 'Home', item: Astro.site.origin + '/' },
      { name: 'Tag List', item: Astro.site.origin + '/tags/' }
]
  : isTag
  ? [
      { name: 'Home', item: Astro.site.origin + '/' },
      { name: 'Tag List', item: Astro.site.origin + '/tags/' },
      { name: pageTitle, item: canonicalURL.toString() }
    ]
  : [
      { name: 'Home', item: Astro.site.origin + '/' },
      { name: pageTitle, item: canonicalURL.toString() }
    ];

const isContact = Astro.url.pathname.startsWith("/contact/");
const ga4TrackingCode = `
<script async src="https://www.googletagmanager.com/gtag/js?id=G-28TE1TDYKD"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-28TE1TDYKD');
</script>
`;
---
<!doctype html>
<html lang="en">
  <head prefix="og: http://ogp.me/ns#">
  <script is:inline src="https://www.google.com/recaptcha/api.js"></script>
  <script is:inline>
  function onSubmit(token) {
    let form = document.getElementById('contactForm');
    if(form.reportValidity()) {
      form.submit();
    }
  }</script>

    <!-- Google tag (gtag.js) -->
    <Fragment set:html={ga4TrackingCode} />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL.toString()} />
    <meta property="og:image" content={ogpImageURL.toString()} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="naomina121" />
    <meta property="og:locale" content="ja_JP" />
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@naomina121">
    <meta name="twitter:title" content={title}>
    <meta name="twitter:description" content={description}>
    <meta name="twitter:image" content={ogpImageURL.toString()}>
    {isThanks && <meta name="robots" content="noindex,nofollow" />}
    <link rel="sitemap" href="/sitemap-index.xml" />
    <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(pageSchema)} />
    {!isUpdates && isUpdatesDetail && <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />}
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="canonical" href={canonicalURL.toString()} />
    <link rel="alternate" hreflang="ja" href={mainURL.toString()} />
    <link rel="alternate" hreflang="en" href={canonicalURL.toString()} />
    <link rel="alternate" hreflang="x-default" href={mainURL.toString()} />
    <meta name="generator" content={Astro.generator} />
    <title>{isIndex ? pageTitle : `${pageTitle} | NAOMINA121`}</title>
  </head>
  <body>
    <div class="container flex justify-between items-start align-top mx-auto max-w-[1200px]">
    <Sp />
    <Sidebar />
    <slot />
    </div>
    <StructuredBreadcrumbs items={breadcrumbItems} />
    <Footer />
  </body>
</html>

