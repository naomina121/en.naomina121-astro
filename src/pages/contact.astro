---
const pageTitle = "Contact";
import Layout from "../layouts/Layout.astro";
const PubDate = "2025-12-11";
const ModDate = "2025-12-11";
---

<Layout pageTitle={pageTitle} PubDate={PubDate} ModDate={ModDate}>
<main class="w-full max-w-6xl bg-[#1e1e1e] pb-[60px] px-16 border-l-[1px] border-[#3c3c3c]">
<div class='mb-6 text-center'>
    <h1 class='text-3xl md:text-4xl font-bold mb-6'>Contact</h1>
    <div class='card border p-8 bg-[#292929] max-w-4xl mx-auto'>
      <form
        class='contact-form'
        action='https://ssgform.com/s/GKfkxe3agIEA'
        method='POST'
        id='contactForm'
      >
        <!-- Name -->
        <div>
          <label for='name'>
            Name
            <span class='required'>*</span>
          </label>
          <input
            type='text'
            id='name'
            name='name'
            required
            placeholder='Your Name'
          />
        </div>

        <!-- E-mail -->
        <div>
          <label for='email'>
            Email Address
            <span class='required'>*</span>
          </label>
          <input
            type='email'
            id='email'
            name='email'
            required
            placeholder='example@email.com'
          />
        </div>

        <!-- Inquiry Category -->
        <div class='text-gray-900'>
          <label
            for='category'
          >
            Inquiry Category
            <span class='required'>*</span>
          </label>
          <select
            id='category'
            name='category'
            required
          >
            <option value=''>Please select</option>
            <option value='general'>general</option>
            <option value='request'>Article Request</option>
            <option value='collaboration'>
              Providing accurate information on article content, typos, etc.
            </option>
            <option value='bug'>Bug Report</option>
            <option value='other'>Other</option>
          </select>
        </div>

        <!-- Subject -->
        <div>
          <label for='subject'>
            Subject
            <span class='required'>*</span>
          </label>
          <input
            type='text'
            id='subject'
            name='subject'
            required

            placeholder='Please enter the subject'
          />
        </div>

        <!-- Inquiry Content -->
        <div>
          <label for='message'>
            Inquiry Content
            <span class='required'>*</span>
          </label>
          <textarea
            id='message'
            name='message'
            rows='6'
            required
            class=' resize-none'
            placeholder='Please provide detailed inquiry content'
          ></textarea>
        </div>

        <!-- Privacy Policy Agreement -->
        <div class='checkbox-group'>
          <input
            type='checkbox'
            id='privacy'
            name='privacy'
            required
          />
          <label
            for='privacy'
          >
            <a
              href='http://en.naomina121.com/privacy/'
              target='_blank'
              rel='noopener noreferrer'
            >Privacy Policy</a> Agreement
          </label>
        </div>

        <!-- Submit Button -->
        <div>
          <button class="g-recaptcha"
          data-sitekey="6LcE6SAsAAAAAHgYf10hU50lPB4sRPZekAkD2XZo"
          data-callback="onSubmit"
          data-action="submit">Submit</button>
        </div>
      </form>
    </div>

    <!-- 注意事項 -->
    <div class='mt-12 max-w-2xl mx-auto'>
      <div
        class='card rounded-lg border p-6'
        style='background-color: var(--bg-secondary)'
      >
        <h2 class='font-bold text-lg mb-4'>Important Notes</h2>
        <ul class='text-left space-y-2 text-sm' style='color: var(--text-secondary)'>
          <li class='flex items-start'>
            <span class='mr-2'>•</span>
            <span
            >Responses to inquiries typically take 2-3 days.</span>
          </li>
          <li class='flex items-start'>
            <span class='mr-2'>•</span>
            <span
            >Due to spam prevention measures, you may not receive a reply. Please check your email settings.</span>
          </li>
          <li class='flex items-start'>
            <span class='mr-2'>•</span>
            <span
            >Depending on the content of your inquiry, we may not be able to respond.</span>
          </li>
        </ul>
      </div>
    </div>
  </div>


</main>
</Layout>
