---
const pageTitle = "404 Not Found";
import Layout from "../layouts/Layout.astro";
---

<Layout pageTitle={pageTitle}>
<main class="w-full max-w-6xl bg-[#1e1e1e] pb-[60px] px-16 border-l-[1px] border-[#3c3c3c]">
    <h1>404 - Not Found</h1>
    <div class="content">
        <p>The page you are looking for does not exist or may have been moved.</p>
        <p>Please check the URL and try again.</p>
        <p>To return to the homepage, please click the link below.</p>
        <a href="/" class="inline-block mt-6 px-6 py-3 bg-gray-700 hover:bg-gray-600 text-white transition-colors">Return to Home</a>
</main>
</Layout>
